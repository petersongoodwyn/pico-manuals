        let list = $("#toc ul li");

        {% if meta.title == "Colour Duo Assembly Guide" %}
        let counter = 1;
        let offset = 0;
        {% else %}
        let counter = 1;
        let offset = 0;
        {% endif %}
        for(let i = offset; i < list.length; i++){
            
            if(isMainStep(list[i])){
                console.log(counter);
                list[i].firstElementChild.prepend(counter+". ");
                findSubStep(list, i, counter);
                counter++;
            };

        }

        function findSubStep(list, i, counter){
        let subCounter = 1;
        
            for(let x = i + 1; x < list.length; x++){
                    {# console.log(list[x]); #}
                    if(list[x]){
                        if(!isMainStep(list[x]) && !(list[x].className === "toc1")){
                            list[x].firstElementChild.prepend(counter+"."+subCounter+". ");
                            subCounter++;
                        }else {
                        return true;
                    }
                    } 
                }

        }

        function isMainStep(elem){
            console.log(elem.className);
            let tempA = elem.firstChild.href.split('#')[1];
            let tempB = $("#" + tempA);
            console.log(tempB[0].parentElement)
            if(tempB[0].parentElement.id && (elem.className === "toc2" || elem.className === "toc3")){
                return true;
            } else {
                return false;
            };

